<Window x:Class="UsingMd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Markdown Editor" Height="600" Width="800" Background="{DynamicResource DarkBackgroundBrush}">
    <Window.Resources>
        <!-- Define pastel color themes -->
        <Color x:Key="Theme1Color">#FFB3B3</Color>
        <Color x:Key="Theme2Color">#FFE6E6</Color>
        <Color x:Key="Theme3Color">#B3FFCC</Color>
        <Color x:Key="Theme4Color">#E6FFEB</Color>
        <Color x:Key="Theme5Color">#B3D9FF</Color>
        <Color x:Key="Theme6Color">#E6F3FF</Color>
        <Color x:Key="DarkBackgroundColor">#A6A6A6</Color>

        <!-- Define dynamic resources for colors -->
        <SolidColorBrush x:Key="BackgroundColor" Color="{DynamicResource Theme1Color}"/>
        <SolidColorBrush x:Key="WebViewBackgroundColor" Color="{DynamicResource Theme2Color}"/>
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{DynamicResource DarkBackgroundColor}"/>
        <SolidColorBrush x:Key="TextColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#0000"/>
        <SolidColorBrush x:Key="ButtonHoverBackgroundColor" Color="#2980B9"/>
        <SolidColorBrush x:Key="MenuBackgroundColor" Color="#0000"/>
        <SolidColorBrush x:Key="MenuBorderColor" Color="#95A5A6"/>

        <!-- Define button style -->
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}" Width="16" Height="16" Margin="0,0,5,0"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ButtonHoverBackgroundColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Define the shadow effect -->
        <DropShadowEffect x:Key="ShadowEffect" Color="Black" Direction="320" ShadowDepth="5" Opacity="0.5" BlurRadius="10"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Menu Container -->
            <Grid x:Name="MenuContainer">
                <!-- Menu Bar -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,10" Background="{DynamicResource MenuBackgroundColor}">
                    <Button Content="File" Style="{StaticResource BaseButtonStyle}" Tag="Icons/file.png" Click="ToggleMenu_Click" ToolTip="File operations"/>
                    <Popup x:Name="FileMenu" Placement="Bottom" StaysOpen="False">
                        <StackPanel Background="{DynamicResource MenuBackgroundColor}">
                            <Button Content="New (Ctrl+N)" Style="{StaticResource BaseButtonStyle}" Tag="Icons/new.png" Click="NewFile_Click"/>
                            <Button Content="Open File (Ctrl+O)" Style="{StaticResource BaseButtonStyle}" Tag="Icons/open.png" Click="OpenFile_Click"/>
                            <Button Content="Save (Ctrl+S)" Style="{StaticResource BaseButtonStyle}" Tag="Icons/save.png" Click="SaveFile_Click"/>
                        </StackPanel>
                    </Popup>
                    <Button Content="Edit" Style="{StaticResource BaseButtonStyle}" Tag="Icons/edit.png" Click="ToggleMenu_Click" ToolTip="Edit operations"/>
                    <Popup x:Name="EditMenu" Placement="Bottom" StaysOpen="False">
                        <StackPanel Background="{DynamicResource MenuBackgroundColor}">
                            <Button Content="Bold (Ctrl+B)" Style="{StaticResource BaseButtonStyle}" Tag="Icons/bold.png" Click="Bold_Click"/>
                            <Button Content="Italic (Ctrl+I)" Style="{StaticResource BaseButtonStyle}" Tag="Icons/italic.png" Click="Italic_Click"/>
                            <Button Content="Copy (Ctrl+C)" Style="{StaticResource BaseButtonStyle}" Tag="Icons/copy.png" Click="Copy_Click"/>
                            <Button Content="Cut (Ctrl+X)" Style="{StaticResource BaseButtonStyle}" Tag="Icons/cut.png" Click="Cut_Click"/>
                            <Button Content="Paste (Ctrl+V)" Style="{StaticResource BaseButtonStyle}" Tag="Icons/paste.png" Click="Paste_Click"/>
                        </StackPanel>
                    </Popup>
                    <Button Content="View" Style="{StaticResource BaseButtonStyle}" Tag="Icons/view.png" Click="ToggleMenu_Click" ToolTip="View options"/>
                    <Popup x:Name="ViewMenu" Placement="Bottom" StaysOpen="False">
                        <StackPanel Background="{DynamicResource MenuBackgroundColor}">
                            <Button Content="Source Code Mode (Ctrl+1)" Style="{StaticResource BaseButtonStyle}" Tag="Icons/source.png" Click="SourceCodeMode_Click"/>
                            <Button Content="UsingMd Mode (Ctrl+2)" Style="{StaticResource BaseButtonStyle}" Tag="Icons/preview.png" Click="UsingMdMode_Click"/>
                            <Button Content="Change Theme" Style="{StaticResource BaseButtonStyle}" Tag="Icons/theme.png" Click="ChangeTheme_Click"/>
                        </StackPanel>
                    </Popup>
                    <Button Content="Help" Style="{StaticResource BaseButtonStyle}" Tag="Icons/help.png" Click="ToggleMenu_Click" ToolTip="Help and about"/>
                    <Popup x:Name="HelpMenu" Placement="Bottom" StaysOpen="False">
                        <StackPanel Background="{DynamicResource MenuBackgroundColor}">
                            <Button Content="About" Style="{StaticResource BaseButtonStyle}" Tag="Icons/about.png" Click="About_Click"/>
                        </StackPanel>
                    </Popup>
                </StackPanel>
            </Grid>

            <!-- Editor and Preview -->
            <Grid Grid.Row="1" Background="{DynamicResource DarkBackgroundBrush}">
                <Border Background="{DynamicResource DarkBackgroundBrush}" Margin="20,0" Padding="20" CornerRadius="5" Effect="{StaticResource ShadowEffect}">
                    <wv2:WebView2 x:Name="webViewEditor" Source="about:blank"/>
                </Border>
                <Border Background="{DynamicResource BackgroundColor}" Margin="20,0" Padding="20" CornerRadius="5">
                    <TextBox x:Name="markdownTextBox" Visibility="Collapsed" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="{DynamicResource BackgroundColor}" Foreground="{DynamicResource TextColor}" BorderThickness="0"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
