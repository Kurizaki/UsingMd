<Application x:Class="UsingMd.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Define pastel color themes -->
        <Color x:Key="Theme1Color">#FFFFB3B3</Color>
        <Color x:Key="Theme2Color">#FFFFE6E6</Color>
        <Color x:Key="Theme3Color">#FFB3FFCC</Color>
        <Color x:Key="Theme4Color">#FFE6FFEB</Color>
        <Color x:Key="Theme5Color">#FFB3D9FF</Color>
        <Color x:Key="Theme6Color">#FFE6F3FF</Color>
        <Color x:Key="DarkBackgroundColor">#FFA6A6A6</Color>
        <Color x:Key="WebViewBackgroundColor">#FFFFB3B3</Color>
        <!-- Define WebView background color -->

        <!-- Define dynamic resources for colors -->
        <SolidColorBrush x:Key="BackgroundColor" Color="{StaticResource Theme1Color}"/>
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackgroundColor}"/>
        <SolidColorBrush x:Key="TextColor" Color="#FF2C3E50"/>
        <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#00000000"/>
        <SolidColorBrush x:Key="ButtonHoverBackgroundColor" Color="#FF2980B9"/>
        <SolidColorBrush x:Key="MenuBackgroundColor" Color="#FFA6A6A6"/>
        <SolidColorBrush x:Key="MenuBorderColor" Color="#FF95A5A6"/>
    </Application.Resources>
</Application>